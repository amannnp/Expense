<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme using AppCompat -->
    <style name="Theme.ExpenseClassifierApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary app colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>

        <!-- Background and text styling -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#555555</item>

        <!-- Optional: Customize widget appearance -->
        <item name="android:windowBackground">#FAFAFA</item>
        <item name="android:editTextColor">#000000</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner</item>

    </style>

</resources>
